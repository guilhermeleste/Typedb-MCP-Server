# EditorConfig para Typedb-MCP-Server
# Garante consistência de formatação entre editores/IDEs
# Alinhado ao rustfmt.toml e boas práticas Rust/TOML/Markdown

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

[*.rs]
indent_style = space
indent_size = 4

[*.toml]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 4

[*.sh]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

